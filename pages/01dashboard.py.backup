def init_openai_client():
    """Inicializa cliente OpenAI para an√°lise subjetiva"""
    api_key = os.getenv("OPENAI_API_KEY")
    if not api_key:
        try:
            api_key = st.secrets["OPENAI_API_KEY"]
        except (KeyError, FileNotFoundError):
            return None
    return openai.Client(api_key=api_key)

def get_user_conversation_history(username):
    """Busca o hist√≥rico de conversas do usu√°rio para an√°lise qualitativa"""
    try:
        # Busca mensagens do usu√°rio (apenas as dele, n√£o as do assistente)
        user_messages = db.get_user_history(username)
        
        # Filtra apenas mensagens do usu√°rio e pega as √∫ltimas 20
        user_responses = [
            msg['content'] for msg in user_messages 
            if msg['role'] == 'user'
        ][-20:]  # √öltimas 20 respostas para an√°lise
        
        return user_responses
    except Exception as e:
        print(f"Erro ao buscar hist√≥rico: {e}")
        return []

def generate_subjective_analysis(username, user_stats, user_messages, client):
    """Gera an√°lise subjetiva usando seu Assistant da OpenAI"""
    if not client or not user_messages:
        return "An√°lise subjetiva n√£o dispon√≠vel."
    
    try:
        # Calcula estat√≠sticas para contexto
        total_decisions = user_stats.get('total_decisoes', 0)
        accuracy = user_stats.get('taxa_acerto', 0)
        
        # Prepara as √∫ltimas respostas do usu√°rio
        recent_responses = "\n".join([f"- {msg}" for msg in user_messages[-10:]])
        
        # Prompt espec√≠fico para an√°lise subjetiva usando seu Assistant
        analysis_prompt = f"""
        Por favor, analise o perfil de lideran√ßa do usu√°rio "{username}" baseado em suas intera√ß√µes no simulador.
        
        DADOS QUANTITATIVOS:
        - Total de decis√µes tomadas: {total_decisions}
        - Taxa de acerto: {accuracy:.1f}%
        
        √öLTIMAS 10 RESPOSTAS DO USU√ÅRIO:
        {recent_responses}
        
        Forne√ßa uma an√°lise SUBJETIVA e QUALITATIVA estruturada no seguinte formato:
        
        ## üéØ PERFIL DE LIDERAN√áA
        [Identifique o estilo de lideran√ßa predominante baseado nas respostas]
        
        ## üí™ PONTOS FORTES OBSERVADOS
        [Liste 3-4 pontos fortes identificados nas decis√µes e respostas]
        
        ## üîÑ √ÅREAS DE DESENVOLVIMENTO
        [Indique 2-3 √°reas que podem ser aprimoradas]
        
        ## üìà PADR√ÉO DE TOMADA DE DECIS√ÉO
        [Analise como este usu√°rio costuma tomar decis√µes - √© anal√≠tico, impulsivo, colaborativo, etc?]
        
        ## üéì RECOMENDA√á√ïES PERSONALIZADAS
        [D√™ sugest√µes espec√≠ficas para desenvolvimento baseadas no perfil identificado]
        
        Base sua an√°lise exclusivamente nas respostas reais fornecidas. Seja construtivo, espec√≠fico e profissional.
        M√°ximo de 800 palavras.
        """
        
        # Cria thread para an√°lise (ou use thread existente se preferir)
        thread = client.beta.threads.create()
        
        # Adiciona mensagem √† thread
        client.beta.threads.messages.create(
            thread_id=thread.id,
            role="user",
            content=analysis_prompt
        )
        
        # Executa o Assistant (use seu ASSISTANT_ID aqui)
        ASSISTANT_ID = "asst_rUreeoWsgwlPaxuJ7J7jYTBC"  # Seu Assistant ID
        
        run = client.beta.threads.runs.create(
            thread_id=thread.id,
            assistant_id=ASSISTANT_ID
        )
        
        # Aguarda conclus√£o
        import time
        while run.status in ['queued', 'in_progress', 'cancelling']:
            time.sleep(1)
            run = client.beta.threads.runs.retrieve(
                thread_id=thread.id,
                run_id=run.id
            )
        
        if run.status == 'completed':
            # Busca a resposta
            messages = client.beta.threads.messages.list(
                thread_id=thread.id
            )
            
            # Pega a √∫ltima mensagem (resposta do Assistant)
            assistant_response = messages.data[0].content[0].text.value
            return assistant_response
        else:
            return f"Erro na execu√ß√£o do Assistant: {run.status}"
        
    except Exception as e:
        return f"Erro ao gerar an√°lise subjetiva: {e}"

def show_user_detailed_analysis(username, df_actions, outcome_column):
    """Mostra an√°lise detalhada de um usu√°rio espec√≠fico"""
    
    user_data = df_actions[df_actions['username'] == username]
    
    if user_data.empty:
        st.warning(f"N√£o h√° dados suficientes para an√°lise de {username}")
        return
    
    # Estat√≠sticas b√°sicas
    total_decisions = len(user_data)
    acertos = len(user_data[user_data[outcome_column] == 'acerto'])
    erros = len(user_data[user_data[outcome_column] == 'erro'])
    taxa_acerto = (acertos / total_decisions * 100) if total_decisions > 0 else 0
    
    # Layout em colunas
    col1, col2 = st.columns([1, 1])
    
    with col1:
        st.subheader(f"üìä An√°lise Quantitativa - {username}")
        
        # M√©tricas
        metrica1, metrica2, metrica3 = st.columns(3)
        metrica1.metric("Decis√µes", total_decisions)
        metrica2.metric("Acertos", acertos)
        metrica3.metric("Taxa (%)", f"{taxa_acerto:.1f}%")
        
        # Evolu√ß√£o temporal se tiver dados suficientes
        if len(user_data) > 5:
            st.markdown("**Evolu√ß√£o Temporal**")
            user_data['date'] = pd.to_datetime(user_data['timestamp']).dt.date
            daily_performance = user_data.groupby('date').agg({
                outcome_column: lambda x: (x == 'acerto').sum() / len(x) * 100
            }).reset_index()
            daily_performance.columns = ['Data', 'Taxa_Acerto_Diaria']
            
            if len(daily_performance) > 1:
                st.line_chart(daily_performance.set_index('Data'))
        
        # Atividade recente
        st.markdown("**√öltimas 5 A√ß√µes**")
        recent_actions = user_data.sort_values('timestamp', ascending=False).head(5)
        st.dataframe(recent_actions[['timestamp', outcome_column]], use_container_width=True)
    
    with col2:
        st.subheader(f"üß† An√°lise Subjetiva - {username}")
        
        # Inicializa cliente OpenAI
        client = init_openai_client()
        
        if client:
            with st.spinner("Gerando an√°lise qualitativa..."):
                # Busca hist√≥rico de conversas
                user_messages = get_user_conversation_history(username)
                
                if user_messages:
                    # Gera an√°lise subjetiva
                    user_stats = {
                        'total_decisoes': total_decisions,
                        'taxa_acerto': taxa_acerto
                    }
                    
                    subjective_analysis = generate_subjective_analysis(
                        username, user_stats, user_messages, client
                    )
                    
                    # Exibe a an√°lise
                    st.markdown(subjective_analysis)
                    
                    # Bot√£o para regenerar an√°lise
                    if st.button(f"üîÑ Regenerar An√°lise para {username}", key=f"regen_{username}"):
                        st.rerun()
                        
                else:
                    st.info("üìù N√£o h√° mensagens suficientes do usu√°rio para an√°lise qualitativa.")
        else:
            st.warning("‚öôÔ∏è OpenAI n√£o configurada. An√°lise subjetiva indispon√≠vel.")

